        "operationId": "getFrontendSimulation",
        "parameters": [
          {
            "$ref": "#/components/parameters/Simulation_id"
          }
        ],
        "security": [],
        "responses": {
          "200": {
            "description": "データ取得成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/SimulatorData"
                    },
                    "success": {
                      "type": "boolean",
                      "description": "成功ならtrueを、失敗ならfalseを返す"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400ErrorResponse"
          }
        }
      }
