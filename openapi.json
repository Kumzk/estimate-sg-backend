        "operationId": "PutSimulator",
        "parameters": [
          {
            "$ref": "#/components/parameters/Simulation_id"
          }
        ],
        "requestBody": {
          "$ref": "#/components/requestBodies/Simulator"
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/SuccessResponse"
          },
          "400": {
            "$ref": "#/components/responses/400ErrorResponse"
