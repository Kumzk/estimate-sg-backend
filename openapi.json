    "/question": {
      "post": {
        "tags": [
          "question"
        ],
        "summary": "新しい質問を作成",
        "description": "新しい質問を作成",
        "operationId": "PostQuestion",
        "requestBody": {
          "$ref": "#/components/requestBodies/Question"
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/PostQuestionSuccessResponse"
          },
          "400": {
            "$ref": "#/components/responses/400ErrorResponse"
          }
        }
      }
    },
    "/question/{id}": {
      "get": {
        "tags": [
          "question"
        ],
        "summary": "質問を取得する",
        "description": "質問を取得する",
        "operationId": "GettQuestion",
        "parameters": [
          {
            "$ref": "#/components/parameters/Question_id"
          }
        ],
        "responses": {
          "200": {
            "description": "データ取得成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/QuestionData"
                    },
                    "success": {
                      "type": "boolean",
                      "description": "成功ならtrueを、失敗ならfalseを返す"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400ErrorResponse"
          }
